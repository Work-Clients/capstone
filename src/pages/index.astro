<script>
  function changeBackgroundImage() {
  // Get a reference to the div element
  const div = document.getElementById("hero"); // Replace "yourDivId" with the actual ID of your div

  // Get the current index of the image
  let imageIndex = 1; // Assuming initially first image is displayed

  // Check if there's a previously stored index in localStorage
  if (localStorage.getItem("backgroundImageIndex")) {
    imageIndex = parseInt(localStorage.getItem("backgroundImageIndex"));
  }

  console.log((imageIndex + 1) % 16);
  // Update the image index for the next iteration
  imageIndex = (imageIndex + 1) % 16;
  
  if (imageIndex == 0) {
    imageIndex = 1;
  }

  div.style.transition = "background-image 1s ease-in-out";

  // Set the background image of the div
  div.style.backgroundImage = `url(/img/scroll/oct/${imageIndex}.JPG)`;

  // Store the image index in localStorage for continuity across page reloads
  localStorage.setItem("backgroundImageIndex", imageIndex.toString());
}

// Call the function initially to set the first image
changeBackgroundImage();

// Set an interval to call the function every 10 seconds
setInterval(changeBackgroundImage, 10000);
</script>
